<p id="notice"><%= notice %></p>

<h1>Tipo de Productos</h1>

<%= link_to 'Regresar a la tabla productos', productos_path %>

<br></br>

<%= link_to 'nuevo tipo producto', new_tipo_path %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos.each do |tipo| %>
      <tr>
        <td><%= tipo.tipo %></td>
        <td><%= tipo.descripcion %></td>
        <td><%= link_to 'mostrar', tipo %></td>
        <td><%= link_to 'Editar', edit_tipo_path(tipo) %></td>
        <td><%= link_to 'Borrar', tipo, method: :delete, data: { confirm: 'estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


